@{
    ViewData["Title"] = "CRUD Page";
}

<div class="row justify-content-center">
    <div class="col-10">
        <h1 style="text-align:center; font-weight: 800;">CRUD Detalle-Compra</h1><br />

        <table class="table" id="tablaCompra">
            <thead class="table-dark">
                <tr>
                    <th>Producto</th>
                    <th>Proveedor</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Fecha Compra</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <div style="text-align:center">
            <button style="font-weight:600" type="button" class="btn btn-primary boton-crear-compra">Crear Compra</button>
        </div>

    </div>
</div>


<div class="modal fade" id="modalCompra" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel" style="font-weight:700">Detalle Compra</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label">Producto:</label>
                    <select class="form-select" id="cboProducto"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Proveedor:</label>
                    <select class="form-select" id="cboProveedor"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Cantidad:</label>
                    <input type="number" class="form-control" id="txtCantidad">
                </div>
                <div class="mb-3">
                    <label class="form-label">Precio:</label>
                    <input type="number" class="form-control" id="txtPrecio">
                </div>
                <div class="mb-3">
                    <label class="form-label">Fecha Compra:</label>
                    <input type="text" class="form-control" id="txtFechaCompra">
                </div>

            </div>
            <div class="modal-footer">
                <button style="font-weight:600" type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button style="font-weight:600" type="button" class="btn btn-success boton-guardar-cambios-compras">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/index.js"></script>
}
